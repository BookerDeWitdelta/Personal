<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RepasoJueves" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="titulo">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/micolor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="txtbotones">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/micolor</item>
    </style>
    <style name="splashinicio" parent="Theme.RepasoJueves">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>